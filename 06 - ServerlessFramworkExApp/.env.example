# Environment Variables for Development
STAGE=dev
REGION=us-east-1
SERVICE_NAME=enterprise-serverless-app
LOG_LEVEL=debug

# DynamoDB Tables (will be created automatically)
USERS_TABLE=enterprise-serverless-app-dev-users
PRODUCTS_TABLE=enterprise-serverless-app-dev-products
ORDERS_TABLE=enterprise-serverless-app-dev-orders
AUDIT_TABLE=enterprise-serverless-app-dev-audit

# SQS Queues (will be created automatically)
ORDER_PROCESSING_QUEUE=enterprise-serverless-app-dev-order-processing
NOTIFICATION_QUEUE=enterprise-serverless-app-dev-notifications

# SNS Topics (will be created automatically)
ORDER_EVENTS_TOPIC=enterprise-serverless-app-dev-order-events
USER_EVENTS_TOPIC=enterprise-serverless-app-dev-user-events

# Cognito (will be created automatically)
USER_POOL_ID=us-east-1_XXXXXXXXX
USER_POOL_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX

# S3 Bucket (will be created automatically)
UPLOADS_BUCKET=enterprise-serverless-app-dev-uploads

# Application Configuration
CORRELATION_ID_HEADER=x-correlation-id
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
PASSWORD_SALT_ROUNDS=12

# Business Configuration
MAX_ITEMS_PER_ORDER=50
MAX_ORDER_VALUE=10000
DEFAULT_CURRENCY=USD
TAX_RATE=8.5
LOW_STOCK_THRESHOLD=10
RESERVATION_TIMEOUT_MINUTES=15

# Notification Templates
ORDER_CONFIRMATION_TEMPLATE=order-confirmation
ORDER_SHIPPED_TEMPLATE=order-shipped
LOW_STOCK_TEMPLATE=low-stock-alert
